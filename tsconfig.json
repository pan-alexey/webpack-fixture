{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "target": "es2015",
    "declaration": true,
    "types": ["node"],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}